<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Message" table="message">
    <indexes>
      <index name="receveur" columns="receveur"/>
      <index name="envoyeur" columns="envoyeur"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="titre" type="text" column="titre" length="65535" nullable="false"/>
    <field name="text" type="text" column="text" length="65535" nullable="false"/>
    <field name="date" type="datetime" column="date" nullable="false"/>
    <many-to-one field="receveur" target-entity="User">
      <join-columns>
        <join-column name="receveur" referenced-column-name="ID"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="envoyeur" target-entity="User">
      <join-columns>
        <join-column name="envoyeur" referenced-column-name="ID"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
