{% extends "KaguBundle::Layout/base.html.twig" %} {% block title %}Ajouter une ambiance{% endblock %} {% block head %} {{ parent() }} {% endblock %} {% block content %}
<section class="row second-nav">
    <div class="large-18 columns">
    <nav>
       <ul class="menu">
        <li><a href="">Mon profil</a></li>
        <li><a href="">Boite de réception</a></li>
        <li><a href="">Ma wishlist</a></li>
        <li><a href="" class="active">Mes ambiances</a></li>
        <li><a href="">Mes ventes</a></li>
        <li><a href="">Mes achats</a></li>
        <li><a href="">Mes locations</a></li>
        </ul> 
        </nav>
    </div>

</section>
<div class="main account">
        <div class="large-18 columns">
            <div class="row">
            <aside class="large-4 columns profil">
               <div class=""><img src="{{ asset('img/valentin.jpg') }}" alt="Nom prénom"></div> 
                <h2>Valentin Marchand</h2>
                <a href="">Modifier mon profil</a>
            </aside>
            <section class="large-16 small-18 columns container-profil">
                <div class="title-profil">
                    <h1 class="large-8 columns">Mes ambiances</h1>
                    <a href="{{ path('kagu_add_ambiance') }}" class="red-button columns">+ Ajouter une ambiance</a>
                </div>
                <div class="content-profil">
                
                
                <ul class="row list-ambiance">
                    {% for ambiance in ambiances %}
                    <li class="large-10 columns item-ambiance">
                        <h2>{{ ambiance.annonce.titre }}</h2>
                        <p>{{ ambiance.annonce.description }}</p>
                        <p> Annonce public : {% if ambiance.annonce.public %} Oui <a href="{{ path('kagu_publish_ambiance', { ambiance : ambiance.annonce.id }) }}">Retirer</a> {% else %} Non <a href="{{ path('kagu_publish_ambiance', { ambiance : ambiance.annonce.id }) }}">Publier</a> {% endif %}
                            <br/>
                            <a href="{{ path('kagu_edit_ambiance', { ambiance : ambiance.annonce.id }) }} ">Modifier</a>
                            <br/>
                            <a href="{{ path('kagu_delete_ambiance', { ambiance: ambiance.annonce.id }) }}">Supprimer</a>
                            <ul>
                                {% for objet in ambiance.objets %}
                                <li>
                                    <h4>{{ objet.titre }}</h4>
                                    <p>{{ objet.prix }} €</p>
                                    <p>{{ objet.description }}</p>
                                </li>
                                {% endfor %}
                            </ul>
                    </li>
                    {% endfor %}
                </ul>
                    </div>
            </section>
        </div>
    </div>
</div>
{% endblock %} {% block javascripts %} {{ parent() }} {% endblock %}